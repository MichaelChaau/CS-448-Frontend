#!/bin/bash

# -e: Exit on first error.
# -u: Reading an undefined variable is an error.
set -eu

function vue() {
    docker run -it --rm -v "${PWD}:${PWD}" -w "${PWD}" vue "$@"
}

# Run build if we were called (not sourced) from the command line.
if [[ "${BASH_SOURCE[0]}" == "${0}" ]] ; then
    vue "$@"
fi
